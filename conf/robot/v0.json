{
    "hardware" : {
        "motors": {
            "front-left-wheel": {
                "controllers" : [
                    {"hwmap": "frontLeft", "direction": "reverse" }
                ]
            },
            "front-right-wheel": {
                "controllers" : [
                    {"hwmap": "frontRight" }
                ]
            },
            "back-left-wheel": {
                "controllers" : [
                    {"hwmap": "backLeft", "direction": "reverse" }
                ]
            },
            "back-right-wheel": {
                "controllers" : [
                    {"hwmap": "backRight", "direction": "reverse" }
                ]
            }
        },
        "imu": {
            "built-in": {
                "hwmap": "imu",
                "logo-direction": "up",
                "usb-direction": "backward"
            }
        },
        "odometers": {
            "otos": {
                "hwmap": "otos",
                "heading-offset" : 0.0,
                "x-offset" : 0.0,
                "y-offset" : 0.0,
                "heading-ratio" : 1.0,
                "position-ratio" : 1.0
            }
        }
    }
}