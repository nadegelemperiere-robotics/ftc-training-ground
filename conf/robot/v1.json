                    { "effector": "outtake-claw",   "position": "closed",            "tolerance": 0.01, "timeout": 500 }
                ],
                "intake-open" : [
                    { "effector": "intake-claw",    "position": "open",              "tolerance": 0.01, "timeout": 200 }
                ]
